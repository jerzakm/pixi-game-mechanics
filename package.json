{
	"name": "pixi-game-mechanics",
	"version": "1.0.0",
	"description": "Collection of game mechanics for pixi",
	"main": "webpack.config.js",
	"scripts": {
		"dev:only": "svelte-kit dev",
		"build:only": "svelte-kit build",
		"preview": "svelte-kit preview",
		"tailwind:watch": "cross-env TAILWIND_MODE=watch cross-env NODE_ENV=development postcss src/styles/tailwind.css -o src/styles/tailwind-output.css -w",
		"tailwind:build": "cross-env TAILWIND_MODE=build cross-env NODE_ENV=production postcss src/styles/tailwind.css -o src/styles/tailwind-output.css",
		"dev": "concurrently \"npm run dev:only\" \"npm run tailwind:watch\"",
		"build": "npm run tailwind:build && npm run build:only",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@sveltejs/kit": "next",
		"@typescript-eslint/eslint-plugin": "^4.19.0",
		"@typescript-eslint/parser": "^4.19.0",
		"autoprefixer": "^10.3.3",
		"concurrently": "^6.2.1",
		"cross-env": "^7.0.3",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-svelte3": "^3.2.0",
		"node-sass": "^6.0.1",
		"postcss-cli": "^8.3.1",
		"prettier": "~2.2.1",
		"prettier-plugin-svelte": "^2.2.0",
		"sass": "^1.38.2",
		"svelte": "^3.34.0",
		"svelte-check": "^2.0.0",
		"svelte-preprocess": "^4.8.0",
		"tailwindcss": "^2.2.9",
		"tslib": "^2.0.0",
		"typescript": "^4.0.0"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jerzakm/pixi-game-mechanics.git"
	},
	"keywords": [],
	"author": "",
	"license": "",
	"bugs": {
		"url": "https://github.com/jerzakm/pixi-game-mechanics/issues"
	},
	"homepage": "https://github.com/jerzakm/pixi-game-mechanics#readme",
	"dependencies": {
		"gpu.js": "^2.11.4",
		"papaparse": "^5.3.1",
		"pixi.js": "^6.1.2"
	}
}
